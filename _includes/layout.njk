    id="body">
    <a href="#content" class="show-for-sr show-on-focus skip-link">Skip navigation</a>

    {% if not home %}<div class="progress" aria-hidden="true"></div>{% endif %}
    <header class="header">
      <div class="nav">
        <nav>
          {# Menu #}
          <button 
